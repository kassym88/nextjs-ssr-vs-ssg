{
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@constants": ["./constants/"],
      "@i18n": ["./i18n/"],
      "@lib/*": ["./lib/*"],
      "@lib": ["./lib/"],
      "@pages/*": ["./pages/*"],
      "@pages": ["./pages/"],
      "@queries/*": ["./queries/*"],
      "@queries": ["./queries/"],
      "@store/*": ["./store/*"],
      "@store": ["./store/"],
      "@storybook/*": ["./storybook/*"],
      "@styles/*": ["./styles/*"],
      "@typings/*": ["./typings/*"],
      "@utilities/*": ["./utilities/*"],
      "@assets/*": ["../assets/*"]
    }
  },
  "exclude": ["node_modules", ".next", "coverage"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
